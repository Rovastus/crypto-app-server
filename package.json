{
  "name": "cryptoapp",
  "private": true,
  "version": "0.0.0",
  "main": "dist/main.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn -s clean && yarn -s generate && tsc",
    "style": "prettier --write 'src/**/*'",
    "dev": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only src/main.ts",
    "migrate": "prisma migrate dev --preview-feature",
    "generate": "yarn -s generate:prisma && yarn -s generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "NODE_ENV=development ts-node --transpile-only src/schema",
    "start": "yarn && yarn dev"
  },
  "dependencies": {
    "@prisma/client": "2.22.1",
    "apollo-server-express": "^2.21.2",
    "apollo-type-bigint": "^0.1.3",
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-import-node": "0.0.4",
    "graphql-scalars": "^1.9.3",
    "json-bigint-patch": "^0.0.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "0.34.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.5",
    "@types/lodash": "^4.14.168",
    "@types/ws": "^7.4.0",
    "faker": "^5.1.0",
    "prettier": "^2.2.1",
    "prisma": "2.22.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
